@{
    Layout = null;
}
@model HastaneMvc.Models.Sınıflar.AnasayfaDoktor

<div class="page-section">
    <div class="container">
        <h1 class="text-center wow fadeInUp">Randevu Al</h1>

        <form action="/Home/Index" method="post">
            <div class="row mt-5 ">
                <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                    <input type="text" class="form-control" name="HastaAdi" placeholder="Adınız">
                </div>
                <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                    <input type="text" class="form-control" name="HastaSoyad" placeholder="Soyad adresiniz">
                </div>
                <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                    <input type="date" class="form-control" name="Tarih">
                </div>
                <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                    <select name="HastalikAlan" id="departement" class="custom-select">
                        <option value="Genel Sağlık">Genel Sağlık</option>
                        <option value="Kardiyoloji">Kardiyoloji</option>
                        <option value="İç Hastalıklar">İç Hastalıklar</option>
                        <option value="Ortopedi">Ortopedi</option>
                    </select>
                </div>
                <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                    <input type="text" class="form-control" name="HastaMail" placeholder="Mail Adresiniz">
                </div>

                <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                    <textarea name="HastaAciklama" id="message" class="form-control" rows="6" placeholder="Kendinizde hissettiğiniz şikayetiniz"></textarea>
                </div>
            </div>

            <button type="submit" name="btn1" class="btn btn-primary mt-3 wow zoomIn">Randevu Al</button>

        </form>
        
    </div>
</div> 