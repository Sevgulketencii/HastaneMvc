@model HastaneMvc.Models.Sınıflar.SonHaberler
<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>


  

    <div class="page-banner overlay-dark bg-image" style="background-image: url(/image/Emsey.jpg);">
        <div class="banner-section">
            <div class="container text-center wow fadeInUp">
                <h1 class="font-weight-normal"><strong>HABERLER</strong></h1>
            </div> <!-- .container -->
        </div> <!-- .banner-section -->
    </div> <!-- .page-banner -->

    <div class="page-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                    @if (ViewBag.hata == 1)
                    {
                     @Html.Partial("_HaberError");
                    }
                    @foreach (var item in Model.haberler)
                        {
                            <div class="col-sm-6 py-3">
                                <div class="card-blog">
                                    <div class="header">
                                        <div class="post-category">
                                            <a href="#">@item.Etiket</a>
                                        </div>
                                        <a asp-action="HaberDetay" asp-route-id=@item.HaberId class="post-thumb">
                                            <img src="@item.HaberImgUrl" alt="">
                                        </a>
                                    </div>
                                    <div class="body">
                                        <h5 class="post-title"><a href="blog-details.html">@item.HaberBaslik</a></h5>
                                        <div class="site-info">
                                            <div class="avatar mr-2">
                                                <div >
                                                    <label>@item.Tarih.ToShortDateString()<label>
                                                </div>
                                                
                                            </div>
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
                    

                        @*<div class="col-12 my-5">
                            <nav aria-label="Page Navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                    </li>
                                    <li class="page-item active" aria-current="page">
                                        <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>*@
                    </div> <!-- .row -->
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="sidebar-block">
                            <h3 class="sidebar-title">Etikete Göre Ara</h3>
                            <form action="/Haberler/Haberler" method="post" class="search-form">
                                <div class="form-group">
                                    <input type="text" name="Etiket" class="form-control" placeholder="Görmek isteğiniz etiketi yazın">
                                    <button type="submit" class="btn"><span class="icon mai-search"></span></button>
                                </div>
                            </form>
                        </div>
                       


                        @Html.Partial("_SonHaberlerPartial")


                    </div>
                </div>
            </div> <!-- .row -->
           

        </div> <!-- .container -->
    </div> <!-- .page-section -->

    
  
</body>
</html>